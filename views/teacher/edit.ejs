<h4>Updating <%= user.name %> Record</h4>
<form method="POST" class="addStu" autocomplete="off">
    <div class="form-group">
      <label for="name" class="form-label">Name : </label>
      <input type="text" name="name" required class="form-control" value="<%= user.name  %> " id="name">
    </div>
    <div class="form-group">
        <label for="rollnumber" class="form-label">Roll No. : </label>
        <input type="number" name="roll" value="<%= user.roll  %> " required class="form-control" id="rollnumber" >
      </div>     
      <div class="form-group">
        <label for="dob" class="form-label">Date of Birth : </label>
        <input type="date" name="dob" value="<%= user.dob  %> " required class="form-control" id="dob">
        
      </div>
      <div class="form-group">
        <label for="score" class="form-label">Score : </label>
      
        <input type="number" name="score" value="<%= user.score  %> " required class="form-control" id="score">
        
      </div>
    <button type="submit" class="loginbtn">Update</button>
</form>

